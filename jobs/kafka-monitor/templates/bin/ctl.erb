#!/bin/bash

set -e

source /var/vcap/packages/openjdk-8/bosh/runtime.env
export PATH=$PATH:/var/vcap/packages/kafka-monitor/bin:$PATH

export CLASSPATH=${CLASSPATH:-''}
for jar_dir in $(ls -d /var/vcap/packages/kafka-monitor/**/*.jar); do
  export CLASSPATH=${jar_dir}:$CLASSPATH
done

case $1 in

  start)
    exec /var/vcap/packages/kafka-monitor/bin/single-cluster-monitor.sh \
      --topic test \
      --broker-list localhost:9092 \
      --zookeeper localhost:2181
    ;;

  *)
    echo "Usage: $0 {start|status|cli}"
    exit 1
    ;;

esac
exit 0